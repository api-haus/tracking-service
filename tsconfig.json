{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "types": [
      "reflect-metadata"
    ],
    "lib": [
      "es6"
    ],
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./src/types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
